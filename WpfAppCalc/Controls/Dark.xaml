<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Menu.Foreground" Value="White"/>
    </Style>
    <Style x:Key="MenuItemStyle" BasedOn="{StaticResource MenuStyle}">
        <Setter Property="MenuItem.FontSize" Value="11"/>
    </Style>
    <Style x:Key="ToolbarStyle">
        <Setter Property="ToolBar.Background" Value="DarkGray"/>
    </Style>
    <Style x:Key="ComboboxStyle" BasedOn="{StaticResource MenuStyle}">
        <Setter Property="ComboBox.Padding" Value="2"/>
        <Setter Property="ComboBox.Foreground" Value="White"/>
        <Setter Property="ComboBox.Width" Value="70"/>
    </Style>
    <Style x:Key="TextboxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Foreground" Value="White"/>
        <Setter Property="TextBox.TextAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>