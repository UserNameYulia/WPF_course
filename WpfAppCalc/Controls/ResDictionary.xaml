<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:collect="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <collect:ArrayList x:Key="fonts">
        <sys:String>Arial</sys:String>
        <sys:String>Times New Roman</sys:String>
        <sys:String>Verdana</sys:String>
    </collect:ArrayList>
    <collect:ArrayList x:Key="sizes">
        <sys:Int16>12</sys:Int16>
        <sys:Int16>14</sys:Int16>
        <sys:Int16>16</sys:Int16>
    </collect:ArrayList>
</ResourceDictionary>